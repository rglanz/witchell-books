---
import { ClientRouter } from "astro:transitions";
import Seo from "@/layouts/seo.astro";

export interface HeadProps {
  title: string;
  description: string;
}

const { title, description } = Astro.props as HeadProps;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" , initial-scale="1.0" />

<!-- Fonts -->
<link
  rel="preload"
  href="/fonts/gwendolyn-v7-latin-700.woff2"
  as="font"
  type="font/woff2"
  crossorigin="anonymous"
/>
<link
  rel="preload"
  href="/fonts/grenze-v15-latin-regular.woff2"
  as="font"
  type="font/woff2"
  crossorigin="anonymous"
/>
<link
  rel="preload"
  href="/fonts/grenze-v15-latin-600.woff2"
  as="font"
  type="font/woff2"
  crossorigin="anonymous"
/>
<!-- end fonts -->

<!-- Favicons-->
<link
  rel="icon"
  type="image/png"
  href="/favicons/favicon-96x96.png"
  sizes="96x96"
/>
<link rel="icon" type="image/svg+xml" href="/favicons/favicon.svg" />
<link rel="shortcut icon" href="/favicons/favicon.ico" />
<link
  rel="apple-touch-icon"
  sizes="180x180"
  href="/favicons/apple-touch-icon.png"
/>
<meta name="apple-mobile-web-app-title" content="Witchell Books" />
<link rel="manifest" href="/favicons/site.webmanifest" />
<!-- end favicons -->

<!-- Other -->
<meta name="generator" content={Astro.generator} />
<link rel="sitemap" href="/sitemap-index.xml" />

<Seo title={title} description={description} />

<ClientRouter fallback="none" />

<!-- Analytics -->
