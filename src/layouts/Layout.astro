---
import "@/styles/globals.css";
import Head from "@/layouts/head.astro";
import type { HeadProps } from "@/layouts/head.astro";
import Nav from "@/components/nav.astro";
// import CTA from "@/containers/cta.astro";
// import { Footer } from "@/containers/footer.tsx";
import { siteName, siteDescription } from "@/utils/config";

interface LayoutProps extends HeadProps {
  cta?: boolean;
}

const {
  title = siteName,
  description = siteDescription,
  // cta = true,
} = Astro.props as LayoutProps;
---

<!doctype html>
<html lang="en" transition:animate="fade" class="w-full overflow-x-clip">
  <head>
    <Head title={title} description={description} />
  </head>
  <body class="overflow-clip max-w-8xl mx-auto">
    <Nav />
    <main>
      <slot />
    </main>
    <!-- {cta && <CTA />} -->
    <!-- <Footer client:load /> -->
  </body>
</html>
